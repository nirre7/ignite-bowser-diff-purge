+ */
+export function FormRow(props: FormRowProps) {
+  let viewStyle
+  if (Array.isArray(props.style)) {
+    viewStyle = reduce((acc,term) => {
+      return { ...acc, ...term }
+    }, PRESETS[props.preset], props.style)
+  } else {
+    viewStyle = {
+      ...PRESETS[props.preset],
+      ...props.style,
