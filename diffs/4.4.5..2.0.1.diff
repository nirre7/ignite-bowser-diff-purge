+   */
+  scroll: {
+    nonScroll: NOPE,
+    scrollOuter: SHAPE,
+    scrollInner: { ...CONTENTS } as ViewStyle,
+  },
+
+  /**
+   * Like scroll, but children are stretched to full width.
+   */
+  scrollStack: {
+    nonScroll: NOPE,
+    scrollOuter: SHAPE,
